@model IEnumerable<Project.Models.AutoRace>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Auto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Auto.Merk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race.RaceDag)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AutoRaceID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AutoRaceID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AutoRaceID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
