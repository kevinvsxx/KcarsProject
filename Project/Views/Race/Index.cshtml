                @Html.DisplayNameFor(model => model.RaceDag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Circuit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaceDag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Circuit.NaamCircuit)
            </td>
